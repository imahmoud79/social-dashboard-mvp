{
  "info": {
    "name": "AMG-CHA Social Dashboard API",
    "description": "API collection for testing the AMG-CHA social media dashboard endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Sign Up",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"demo@amg-cha.com\",\n  \"password\": \"demo123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/signup",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "signup"]
            }
          }
        }
      ]
    },
    {
      "name": "Data Ingestion",
      "item": [
        {
          "name": "Ingest YouTube Metrics",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/ingest/youtube?days=7",
              "host": ["{{base_url}}"],
              "path": ["api", "ingest", "youtube"],
              "query": [
                {
                  "key": "days",
                  "value": "7"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Data Retrieval",
      "item": [
        {
          "name": "Get All Campaigns",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/campaigns",
              "host": ["{{base_url}}"],
              "path": ["api", "campaigns"]
            }
          }
        },
        {
          "name": "Get Campaign by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/campaigns/{{campaign_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "campaigns", "{{campaign_id}}"]
            }
          }
        },
        {
          "name": "Get Metrics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/metrics?days=7",
              "host": ["{{base_url}}"],
              "path": ["api", "metrics"],
              "query": [
                {
                  "key": "days",
                  "value": "7"
                },
                {
                  "key": "campaignId",
                  "value": "{{campaign_id}}",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Get Connector Statuses",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/connectors",
              "host": ["{{base_url}}"],
              "path": ["api", "connectors"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "campaign_id",
      "value": "demo-youtube-campaign",
      "type": "string"
    }
  ]
} 