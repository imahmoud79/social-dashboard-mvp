generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
}

model Campaign {
  id        String   @id @default(cuid())
  name      String
  platform  String
  cost      Float?
  revenue   Float?
  createdAt DateTime @default(now())
  metrics   Metric[]
}

model Metric {
  id         String   @id @default(cuid())
  campaign   Campaign @relation(fields: [campaignId], references: [id])
  campaignId String
  ts         DateTime
  key        String
  value      Float
  meta       String?  // SQLite doesn't support Json, use String
  @@unique([campaignId, ts, key])
} 